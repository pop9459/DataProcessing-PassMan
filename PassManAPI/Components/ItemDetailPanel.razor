@* 
    Item Detail Panel Component
    
    Slide-in panel that displays detailed information about a vault item
    Includes view/edit capabilities and delete functionality
*@

<!-- Overlay/Shade -->
<div class="panel-overlay @(IsOpen ? "active" : "")" @onclick="ClosePanel"></div>

<!-- Slide-in Panel -->
<div class="item-detail-panel @(IsOpen ? "open" : "")"
        <!-- Close Button -->
        <button class="panel-close" @onclick="ClosePanel" title="Close">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>

        <div class="panel-content">
            <!-- Section 1: Header with Icon and Title -->
            <div class="panel-header">
                <div class="header-icon">
                    @* TODO: Replace with dynamic favicon based on URL *@
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </div>
                <div class="header-info">
                    <h2 class="item-title">@ItemName</h2>
                    @if (!string.IsNullOrEmpty(ItemLabel))
                    {
                        <span class="item-label-tag">@ItemLabel</span>
                    }
                </div>
            </div>

            <!-- Section 2: Form Fields -->
            <div class="panel-form">
                <!-- Username Field -->
                <div class="form-field">
                    <label>Username</label>
                    <div class="input-group">
                        <input type="text" value="@ItemUsername" readonly />
                        <button class="input-action-btn" title="Copy username">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                <path d="M8 4V16C8 17.1046 8.89543 18 10 18H18C19.1046 18 20 17.1046 20 16V7.24162C20 6.71055 19.7893 6.20162 19.4142 5.82654L16.1716 2.58397C15.7965 2.20889 15.2876 2 14.7565 2H10C8.89543 2 8 2.89543 8 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M16 18V20C16 21.1046 15.1046 22 14 22H6C4.89543 22 4 21.1046 4 20V9C4 7.89543 4.89543 7 6 7H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Password Field -->
                <div class="form-field">
                    <label>Password</label>
                    <div class="input-group">
                        <input type="@(showPassword ? "text" : "password")" value="@ItemPassword" readonly />
                        <button class="input-action-btn" @onclick="TogglePasswordVisibility" title="@(showPassword ? "Hide" : "Show") password">
                            @if (showPassword)
                            {
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                    <path d="M3 3L21 21M10.5 10.677C10.0353 11.0669 9.75 11.6554 9.75 12.3077C9.75 13.5083 10.7193 14.4846 11.9167 14.4846C12.5662 14.4846 13.1516 14.1979 13.5402 13.7304M6.93726 6.98424C4.92908 8.33531 3.41014 10.3488 2.66602 12.7158C5.0268 19.0639 10.8952 22.3077 16.9993 20.2333C18.9626 19.5529 20.7145 18.3481 22.0768 16.7636M12.8627 5.04162C17.7699 4.72455 22.3327 8.13011 24.3327 13.6923C23.8737 15.0423 23.193 16.292 22.3327 17.3923M14.75 12.3077C14.75 13.5083 13.7807 14.4846 12.5833 14.4846" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            }
                            else
                            {
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                    <path d="M2.42012 12.7132C2.28394 12.4975 2.21584 12.3897 2.17772 12.2234C2.14909 12.0985 2.14909 11.9015 2.17772 11.7766C2.21584 11.6103 2.28394 11.5025 2.42012 11.2868C3.54553 9.50484 6.8954 5 12.0004 5C17.1054 5 20.4553 9.50484 21.5807 11.2868C21.7169 11.5025 21.785 11.6103 21.8231 11.7766C21.8517 11.9015 21.8517 12.0985 21.8231 12.2234C21.785 12.3897 21.7169 12.4975 21.5807 12.7132C20.4553 14.4952 17.1054 19 12.0004 19C6.8954 19 3.54553 14.4952 2.42012 12.7132Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    <path d="M12.0004 15C13.6573 15 15.0004 13.6569 15.0004 12C15.0004 10.3431 13.6573 9 12.0004 9C10.3435 9 9.0004 10.3431 9.0004 12C9.0004 13.6569 10.3435 15 12.0004 15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            }
                        </button>
                        <button class="input-action-btn" title="Copy password">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                <path d="M8 4V16C8 17.1046 8.89543 18 10 18H18C19.1046 18 20 17.1046 20 16V7.24162C20 6.71055 19.7893 6.20162 19.4142 5.82654L16.1716 2.58397C15.7965 2.20889 15.2876 2 14.7565 2H10C8.89543 2 8 2.89543 8 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M16 18V20C16 21.1046 15.1046 22 14 22H6C4.89543 22 4 21.1046 4 20V9C4 7.89543 4.89543 7 6 7H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- URL Field (Optional) -->
                @if (!string.IsNullOrEmpty(ItemUrl))
                {
                    <div class="form-field">
                        <label>URL</label>
                        <div class="input-group">
                            <input type="text" value="@ItemUrl" readonly />
                            <button class="input-action-btn" title="Open URL">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                    <path d="M10 6H6C4.89543 6 4 6.89543 4 8V18C4 19.1046 4.89543 20 6 20H16C17.1046 20 18 19.1046 18 18V14M14 4H20M20 4V10M20 4L10 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                }

                <!-- Notes Field -->
                <div class="form-field">
                    <label>Notes</label>
                    <textarea rows="3" readonly>@ItemNotes</textarea>
                </div>

                <!-- Tags Field -->
                @if (!string.IsNullOrEmpty(ItemTags))
                {
                    <div class="form-field">
                        <label>Tags</label>
                        <div class="tags-container">
                            @foreach (var tag in ItemTags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                            {
                                <span class="tag">@tag.Trim()</span>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Section 3: Divider -->
            <div class="panel-divider"></div>

            <!-- Section 4: Metadata (Created/Updated) -->
            <div class="panel-metadata">
                <div class="metadata-row">
                    <span class="metadata-label">Created</span>
                    <span class="metadata-value">@ItemCreatedAt</span>
                </div>
                <div class="metadata-row">
                    <span class="metadata-label">Updated</span>
                    <span class="metadata-value">@ItemUpdatedAt</span>
                </div>
            </div>

            <!-- Section 5: Action Buttons -->
            <div class="panel-actions">
                <button class="btn-edit" @onclick="HandleEdit">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                        <path d="M11 4H4C3.46957 4 2.96086 4.21071 2.58579 4.58579C2.21071 4.96086 2 5.46957 2 6V20C2 20.5304 2.21071 21.0391 2.58579 21.4142C2.96086 21.7893 3.46957 22 4 22H18C18.5304 22 19.0391 21.7893 19.4142 21.4142C19.7893 21.0391 20 20.5304 20 20V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M18.5 2.50001C18.8978 2.10219 19.4374 1.87869 20 1.87869C20.5626 1.87869 21.1022 2.10219 21.5 2.50001C21.8978 2.89784 22.1213 3.4374 22.1213 4.00001C22.1213 4.56262 21.8978 5.10219 21.5 5.50001L12 15L8 16L9 12L18.5 2.50001Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Edit
                </button>
                <button class="btn-delete" @onclick="HandleDelete">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                        <path d="M3 6H5H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M10 11V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M14 11V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Delete
                </button>
            </div>
        </div>
    </div>

@code {
    [Parameter]
    public bool IsOpen { get; set; }
    
    [Parameter]
    public EventCallback OnClose { get; set; }
    
    [Parameter]
    public EventCallback OnEdit { get; set; }
    
    [Parameter]
    public EventCallback OnDelete { get; set; }
    
    [Parameter]
    public string ItemName { get; set; } = "";
    
    [Parameter]
    public string ItemUsername { get; set; } = "";
    
    [Parameter]
    public string ItemPassword { get; set; } = "••••••••••";
    
    [Parameter]
    public string ItemUrl { get; set; } = "";
    
    [Parameter]
    public string ItemLabel { get; set; } = "";
    
    [Parameter]
    public string ItemNotes { get; set; } = "";
    
    [Parameter]
    public string ItemTags { get; set; } = "";
    
    [Parameter]
    public string ItemCreatedAt { get; set; } = "";
    
    [Parameter]
    public string ItemUpdatedAt { get; set; } = "";
    
    private bool showPassword = false;
    
    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }
    
    private async Task ClosePanel()
    {
        await OnClose.InvokeAsync();
    }
    
    private async Task HandleEdit()
    {
        await OnEdit.InvokeAsync();
    }
    
    private async Task HandleDelete()
    {
        await OnDelete.InvokeAsync();
    }
}
