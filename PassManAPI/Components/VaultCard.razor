@* 
    Reusable Vault Card Component
    
    Displays a vault with icon, name, description, and metadata
*@

<div class="vault-card" @onclick="HandleClick">
    <!-- Row 1: Icon and Label -->
    <div class="vault-row-1">
        <div class="vault-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M19 11H5C3.89543 11 3 11.8954 3 13V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V13C21 11.8954 20.1046 11 19 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M7 11V7C7 5.67392 7.52678 4.40215 8.46447 3.46447C9.40215 2.52678 10.6739 2 12 2C13.3261 2 14.5979 2.52678 15.5355 3.46447C16.4732 4.40215 17 5.67392 17 7V11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
        @if (IsShared)
        {
            <span class="vault-label">Shared</span>
        }
    </div>
    
    <!-- Row 2: Title -->
    <h3 class="vault-name">@Name</h3>
    
    <!-- Row 3: Description -->
    <p class="vault-description">@Description</p>
    
    <!-- Row 4: Metadata -->
    <div class="vault-meta">
        <div class="vault-items">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                <path d="M7 10V7C7 5.67392 7.52678 4.40215 8.46447 3.46447C9.40215 2.52678 10.6739 2 12 2C13.3261 2 14.5979 2.52678 15.5355 3.46447C16.4732 4.40215 17 5.67392 17 7V10M5 10H19C20.1046 10 21 10.8954 21 12V20C21 21.1046 20.1046 22 19 22H5C3.89543 22 3 21.1046 3 20V12C3 10.8954 3.89543 10 5 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>@ItemCount items</span>
        </div>
        <div class="vault-date">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                <path d="M8 2V6M16 2V6M3 10H21M5 4H19C20.1046 4 21 4.89543 21 6V20C21 21.1046 20.1046 22 19 22H5C3.89543 22 3 21.1046 3 20V6C3 4.89543 3.89543 4 5 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>@LastModified</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "Vault";
    
    [Parameter]
    public string Description { get; set; } = "";
    
    [Parameter]
    public int ItemCount { get; set; } = 0;
    
    [Parameter]
    public string LastModified { get; set; } = "";
    
    [Parameter]
    public bool IsShared { get; set; } = false;
    
    [Parameter]
    public EventCallback OnClick { get; set; }
    
    private async Task HandleClick()
    {
        await OnClick.InvokeAsync();
    }
}
